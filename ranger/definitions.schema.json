{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://raw.githubusercontent.com/battlefield-portal-community/schemas/main/ranger/definitions.schema.json",
  "title": "Basic Blocks",
  "description": "Schema for reusable blocks definitions",
  "type": "object",
  "definitions": {
    "message": {
      "title": "Message",
      "description": "Message That will be sent",
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "pattern": "^[0-9]{18}$",
          "title": "Message ID",
          "description": "ID of the message that is sent [Leave Empty, set by bot]"
        },
        "embed": {
          "type": "object",
          "title": "Embed",
          "description": "Embed Object to be sent with message",
          "options": {
            "collapsed": true
          },
          "properties": {
            "title": {
              "type": "string",
              "title": "Title",
              "description": "Title of the embed"
            },
            "description": {
              "type": "string",
              "title": "Description",
              "format": "textarea",
              "description": "Content of the embed"
            },
            "color": {
              "type": "string",
              "format": "color",
              "title": "Color of left border of embed",
              "default": "#26FFDF"
            }
          }
        },
        "buttons": {
          "type": "object",
          "title": "View",
          "description": "View Attached to the message",
          "options": {
            "collapsed": true
          },
          "properties": {
            "count": {
              "type": "boolean",
              "default": false,
              "title": "Count",
              "description": "Should the Labels of the button update with the member count of the role"
            },
            "list": {
              "type": "array",
              "maxItems": 25,
              "title": "Buttons",
              "items": {
                "headerTemplate": "{{self.label}}",
                "type": "object",
                "title": "Button",
                "properties": {
                  "emoji": {
                    "type": "string",
                    "title": "Emoji",
                    "description": "Emoji to be attached to the button"
                  },
                  "label": {
                    "type": "string",
                    "title": "Label",
                    "descriptions": "Label of the button"
                  },
                  "role_id": {
                    "type": "string",
                    "pattern": "^[0-9]{18}$",
                    "title": "Role ID",
                    "description": "ID of Role to be given"
                  },
                  "style": {
                    "type": "string",
                    "enum": [
                      "primary",
                      "secondary",
                      "success",
                      "danger"
                    ],
                    "title": "Style",
                    "description": "Style of the button see https://discord.com/developers/docs/interactions/message-components#button-object-button-styles for more"
                  }
                }
              }
            }
          }
        }
      }
    },
    "embedMessage": {
      "title": "Message",
      "description": "Message That will be sent",
      "type": "object",
      "properties": {
        "embeds": {
          "title": "Embeds",
          "description": "Embeds to send in this message",
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string"
              },
              "color": {
                "type": "string"
              },
              "description": {
                "type": "string"
              },
              "title": {
                "type": "string"
              }
            }
          },
          "additionalProperties": false,
          "minItems": 1,
          "maxItems": 25,
          "options": {
            "collapsed": true
          }
        }
      }
    }
  }
}
